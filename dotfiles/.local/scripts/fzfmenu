#!/bin/bash

selected=$(printf " cancel\n襤shutdown\n reboot\n"|fzf --layout=reverse --border)

case $selected in
    " cancel")
        ;;
    "襤shutdown")
        selected=$(printf " no\n yes"|fzf --layout=reverse --border)
        if [[ "$selected" == " yes" ]]
        then
            exec systemctl poweroff
        fi
        ;;
    " reboot")
        selected=$(printf " no\n yes"|fzf --layout=reverse --border)
        if [[ "$selected" == " yes" ]]
        then
            exec systemctl reboot
        fi
        ;;
esac
